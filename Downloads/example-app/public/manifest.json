{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "My Vite Extension",
    "author": "Huy Tran",
    "action": {
      "default_popup": "src/popup/popup.html",
      "default_title": "Like/Dislike Extension"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "js": [
          "contentScript.js"
        ]
      }
    ],
    "permissions": [
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "icons": {
      "32": "icon32.png"
    }
  }
  